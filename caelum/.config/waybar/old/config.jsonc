{
  "layer": "bottom",
  "position": "top",
  "height": 35,
  "width": 0,
  "spacing": 5,
  "margin-top": -11,
  "margin-right": 30,
  "margin-left": 30,
  "modules-left": ["custom/home","custom/sep","hyprland/workspaces", "custom/sep", "wlr/taskbar"],
  "modules-center": ["custom/weather", "custom/sep", "clock", "custom/sep", "custom/ncspot"],
  "modules-right": ["custom/system-stats", "custom/sep", "network", "custom/sep", "idle_inhibitor", "custom/power"],

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "active": "",
      "default": "",
      "urgent": "",

      "5": ""
    }
  },

  "tray": {
    "icon-size": "10",
    "spacing": "50"
  },
 
  "network": {
    "format": "{icon}",

    "format-wifi":         "󰤥",
    "format-ethernet":     "󰈀",
    "format-disconnected": "󰤮",
    "format-icons": {
      "low":  "󰤟",
      "high": "󰤨"
    },
    "tooltip-format": "{ifname}\nSSID: {essid}\nIP: {ipaddr}",
    "on-click": "./scripts/network.sh"
  },

  "bluetooth": {
    "format": "{icon} {status}",
    "format-connected": "{icon} {device_alias}",
    "format-connected-battery": "{icon} {device_alias} {device_battery_percentage}%",
    "format-icons": {
        "enabled": "󰂯",
        "disabled": "󰂲",
        "connected": "󰂱"
    },
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "blueman-manager"
  },

  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{icon}  {volume}% ",
    "format-muted": "",
    "scroll-step": 1,
    "max-volume": 200,
    "on-click": "pavucontrol",
    "ignored-sinks": ["Easy Effects Sink"],
    "format-icons": {
      "default": ["", ""]
    }
  },
  
  "battery": {
    "format": "{capacity}% {icon}",
    "format-icons": ["", "", "", "", ""]
  },
  
  "clock": {
    "format": "{:%R %p 󰧞 %a, %d\/%m}",
    "on-click": "swaync-client -t"
  },
  
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    }
  },
  
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 16,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "sort-by-id": true
  },

  "custom/launcher": {
    "format": "",
    "on-click": "flatpak run md.obsidian.Obsidian",
    "tooltip": false
  },

  "custom/notifications": {
    "format": " {}",
    "exec": "swaync-client -c",
    "return-type": "json",
    "interval": 2,
    "on-click": "swaync-client -t"
  },

  "custom/system-stats": {
    "exec": "~/.config/waybar/scripts/system-stats.sh",
    "return-type": "json",
    "interval": 1,
    "on-click": "~/.config/waybar/scripts/toggle-stats.sh",
    "on-click-right": "pavucontrol",
    "on-click-middle": "blueman-manager",
    "tooltip": true,

    "on-scroll-up":   "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
  },

  "custom/ncspot": {
    "exec": "~/.config/waybar/scripts/musicstats.sh",
    "interval": 1,
    "format": "{}",
    "max-length": 25,
    "on-click": "~/.config/waybar/scripts/musictl.sh play-pause",
    "on-click-right": "~/.config/waybar/scripts/musictl.sh next",
    "on-click-middle": "~/.config/waybar/scripts/musictl.sh previous"
  },

  "custom/sep": {
    "format": "",
    "tooltip": false
  },

  "custom/power": {
    "format": "⏻",
    "tooltip": false,
    "on-click": "~/scripts/power-menu.sh"
  },

  "custom/home": {
    "format": "",
    "tooltip": false,
    "on-click": "~/scripts/home-menu.sh"
  },

  "custom/weather": {
      "format": "{}°",
      "tooltip": true,
      "interval": 3600,
      "exec": "wttrbar",
      "return-type": "json"
  },

    "custom/bluetooth": {
        "exec": "~/.config/waybar/scripts/bluetooth.sh",
        "interval": 5,
        "format": "{}",
        "on-click": "blueman-manager"
    }
}
